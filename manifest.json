{
  "manifest_version": 2,
  "name": "Contrast Extension",
  "description": "Allows the user to get information from TeamServer conveniently in a Chrome extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "js/util.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/util.js",
        "js/content-script.js"
      ]
    }
  ],
  "icons": { "16": "img/contrast16.png",
           "48": "img/contrast48.png",
          "128": "img/contrast128.png" },
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*",
    "https://*.contrastsecurity.com/",
    "tabs",
    "background",
    "notifications"
  ]
}
